{
    "name": "ayup-creative/features",
    "description": "Simple feature flag system for Laravel with PHP Attributes support",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AyupCreative\\Features\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "AyupCreative\\Features\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "\\AyupCreative\\Features\\FeaturesServiceProvider"
            ],
            "aliases": {
                "Features": "\\AyupCreative\\Features\\Facades\\Features"
            }
        }
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/queue": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^10.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
